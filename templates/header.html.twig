<header class="bg-white p-4 border-b border-gray-300">
	<div
		class="container mx-auto flex flex-col md:flex-row items-center">
		<!-- Logo et Titre -->
		<a href="/" class="text-gray-800 text-xl font-bold flex items-center">
			<img src="images/WebIcon-RdM.jpg" alt="Logo du club Raquettes du Miosson" class="">
		</a>
		<div class="flex mx-auto flex-col mb-12">
			<h1 class="text-3xl">Club Raquettes du Miosson</h1>
			<h2 class="text-sm">Le tennis, c'est pour toute la famille.</h2>
		</div>

		<!-- Boutons de Connexion/Déconnexion -->
		<div>
			{% if app.user is null %}
				<div class="flex items-center mt-4 md:mt-0 ml-auto">
					<a href="/login" class="text-gray-800 border border-gray-800 hover:text-orange-600 p-4 rounded-md px-transition duration-300 ease-in-out">Se connecter</a>
				</div>
			{% else %}
				<h2 class="flex items-center mt-4 md:mt-0 ml-auto">
					{% set currentHour = "now"|date("G") %}
					{% if 6 <= currentHour and currentHour < 19 %}
						Bonjour,
					{% else %}
						Bonsoir,
					{% endif %}
					{{ app.user.name }}
					{{ app.user.surname }}
				</h2>
			</h2>

			<div class="flex items-center mt-4 md:mt-0 ml-auto text-gray-800">
				<a href="/panel" class=" hover:text-orange-600 transition underline duration-300 ease-in-out">Mon compte</a>
			</div>

			<div class="flex items-center mt-4 md:mt-0 ml-auto">
				<a href="/logout" class=""><img src="images/logout-svgrepo-com.svg" class="w-10 h-auto hover:scale-110"></a>
			</div>
		{% endif %}
	</div>
</div>

<nav class="flex mt-4 md:mt-0">
	<ul class="flex flex-col mx-auto md:flex-row items-center space-y-2 md:space-y-0 md:space-x-8 text-gray-800">
		<li>
			<a href="/" class="hover:text-orange-600 transition duration-300 ease-in-out">Accueil</a>
		</li>
		<li>
			<a href="/about" class="hover:text-orange-600 transition duration-300 ease-in-out">Qui sommes nous ?</a>
		</li>
		<li>
			<a href="/adherer" class="hover:text-orange-600 transition duration-300 ease-in-out">Inscriptions</a>
		</li>
		<li>
			<a href="" class="hover:text-orange-600 transition duration-300 ease-in-out">Compétitions JEUNES</a>
		</li>
		<li>
			<a href="" class="hover:text-orange-600 transition duration-300 ease-in-out">Partenaires</a>
		</li>
		<li>
			<a href="/contact" class="hover:text-orange-600 transition duration-300 ease-in-out">Contact</a>
		</li>
	</ul>
</nav></header>
