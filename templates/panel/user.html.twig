{% extends 'base.user.html.twig' %}

{% block title %}Panel utilisateur - Raquettes du Miosson
{% endblock %}

{% block body %}
	<div
		class="flex-1 flex flex-col">
		<!-- Espace réservé pour la navbar, si nécessaire -->
		<div class="hidden md:block md:w-64 lg:w-64"></div>

		<!-- Contenu principal -->
		<div class="ml-64 p-4">
			<div class="max-w-5xl mx-auto bg-white shadow rounded-lg p-6">
				<div class="flex flex-nowrap mb-6 justify-between">
					<div>
						<h1 class="text-2xl font-semibold text-gray-800">Bonjour,
							{{ app.user.name }}
							!</h1>
						<p class="text-gray-500 text-sm">Bienvenue sur votre espace personnel.</p>
					</div>
					<div class="order-last flex mt-4 w-auto items-center border-2 p-2 rounded-lg">
						<p class="text-xl font-bold pr-2">{{ app.user.tokenAmount }}</p>
						<img src="images/userPanel/token-bat-coin-svgrepo-com.svg" class="w-10 h-auto">
					</div>
				</div>

				<h2 class="text-xl font-semibold text-gray-800 mb-4">Mes informations</h2>
				<div class="space-y-4">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Nom :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.name }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Prénom :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.surname }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Date d'anniversaire :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.birthdate|date("Y-m-d") }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Adresse mail :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.email }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Numéro de téléphone :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.phone }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Adresse :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.address }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Code postal :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.zipcode }}</div>
						</div>

						<div class="form-group">
							<p class="text-gray-700 text-sm font-bold mb-2">Ville :</p>
							<div class="p-2 bg-gray-100 rounded-md border-2 shadow-sm">{{ app.user.city }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block footer %}{% endblock %}
