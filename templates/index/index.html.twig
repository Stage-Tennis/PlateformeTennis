{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('carousel') }}
{% endblock %}

{% block body %}

	<div class="swiper-container overflow-hidden" id="swiper">
		<div class="swiper-wrapper">
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/voeux_entete.jpg" alt="Slide 1"></div>
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/coach-entete.jpg" alt="Slide 2"></div>
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/galaxie-entete.jpg" alt="Slide 3"></div>
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/Actualites-Site2.jpg" alt="Slide 4"></div>
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/sponso_entete.jpg" alt="Slide 5"></div>
			<div class="swiper-slide"><img class="object-cover h-full w-full" src="images/ag_entete.jpg" alt="Slide 6"></div>
		</div>
		<div class="swiper-container swiper-pagination h-4"></div>

		<div id="swiper-button-next" class="absolute top-1/2 right-0 transform -translate-y-1/2 -translate-x-1/2 z-10 text-2xl text-white hover:opacity-100">
			<i class="fas fa-angle-right"></i>
		</div>

		<div id="swiper-button-prev" class="absolute top-1/2 left-0 transform -translate-y-1/2 translate-x-1/2 z-10 text-2xl text-white hover:opacity-100">
			<i class="fas fa-angle-left"></i>
		</div>
	</div>
{% endblock %}
