{% extends 'base.html.twig' %}

{% block title %}Se connecter - Raquettes du Miosson
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags("login") }}
{% endblock %}


{% block header %}{% endblock %}

{% block body %}
	<div class="flex items-center justify-center bg-gray-100 pt-12 mb-8 h-screen">
		<form method="post" class="w-full max-w-md bg-white shadow-xl rounded-lg px-8 pt-6 pb-8 mb-4">
			<a href="https://raquettesdumiosson.fr/"><img src="images/WebIcon-RdM.jpg" alt="Logo" class="mx-auto mb-8"></a>
			{% if reset_password is defined %}
				<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
					<strong class="font-bold">Merci d'avoir configuré votre compte ! Veuillez vous reconnecter pour poursuivre.</strong>
				</div>
			{% endif %}

			{% if error is not null %}
				<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
					<strong class="font-bold">Erreur :</strong>
					<span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
				</div>
			{% endif %}

			<div class="mb-4">
				<label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email
					<span class="text-red-500">*</span>
				</label>
				<input type="email" name="email" id="inputEmail" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-orange-500" autocomplete="email" required autofocus>
			</div>

			<div class="relative mb-6">
				<label for="inputPassword" class="block text-gray-700 text-sm font-bold mb-2">Mot de passe
					<span class="text-red-500">*</span>
				</label>
				<div class="flex items-center shadow appearance-none border rounded w-full">
					<input type="password" name="password" id="password" class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:ring-orange-500" autocomplete="current-password" required>
					<button id="toggle-password-visibility" type="button" class="p-2">
						<i class="fas fa-eye"></i>
					</button>
				</div>
				<span class="">
					<a href="{{ path('app_forgot_password_request') }}" class="text-orange-600 hover:text-orange-700 text-sm opacity-70">Mot de passe oublié ?</a>
				</span>
			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<input type="submit" value="Se connecter" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:ring-orange-600 focus:ring-opacity-50">
		</form>
	</div>
{% endblock %}
{% block footer %}{% endblock %}
